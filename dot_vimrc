" Don't use unnecessary compatibility mode
set nocompatible

" Assume fast tty
set ttyfast

" Use ~/.vim for all backups / swaps / undo...
set backupdir=~/.vim/backups
set directory=~/.vim/swaps
if exists("&undodir")
	set undodir=~/.vim/undo
endif

" ...except for tmp dirs
set backupskip=/tmp/*,/private/tmp/*

" Use line numbers
set number

" Use syntax highlighting
syntax on

" Make search more friendly
set hlsearch
set ignorecase
set incsearch

" Show useful information
set showmode
set title
set showcmd
